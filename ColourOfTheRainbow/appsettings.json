{
  "exclude": [
    "**/bin",
    "**/bower_components",
    "**/jspm_packages",
    "**/node_modules",
    "**/obj",
    "**/platforms"
  ],

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Overrides": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Warning"
      }
    },
    "Using": [ "Serilog.Sinks.File" ]
  },

  "ReturnType": "RGB",

  "Colours": [
    {
      "Name": "Red",
      "Hex": "FF0000",
      "RGB": "255, 0, 0"
    },
    {
      "Name": "Orange",
      "Hex": "FF6C2F",
      "RGB": "255,108,47"
    },
    {
      "Name": "Yellow",
      "Hex": "FFFF00",
      "RGB": "255, 255, 0"
    },
    {
      "Name": "Green",
      "Hex": "00FF00",
      "RGB": "0, 255, 0"
    },
    {
      "Name": "Blue",
      "Hex": "0000FF",
      "RGB": "0, 0, 255"
    },
    {
      "Name": "Indigo",
      "Hex": "4B0082",
      "RGB": "75, 0, 130"
    },
    {
      "Name": "Violet",
      "Hex": "9400D3",
      "RGB": "148, 0, 211"
    }
  ]
}